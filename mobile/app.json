{
    "expo": {
        "name": "API-First Video App",
        "slug": "video-app-mobile",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0A0A0F"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.integralsolution.videoapp"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0A0A0F"
            },
            "package": "com.integralsolution.videoapp"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        }
    }
}