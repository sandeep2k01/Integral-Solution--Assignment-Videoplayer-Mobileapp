# ===================================
# API-First Video App - Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# -----------------------------------
# MongoDB Configuration
# -----------------------------------
# For MongoDB Atlas (recommended for production):
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017/video_app

# -----------------------------------
# JWT Configuration
# -----------------------------------
# Secret key for signing JWT tokens (use a long random string in production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# -----------------------------------
# Flask Configuration
# -----------------------------------
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-flask-secret-key-change-in-production

# -----------------------------------
# Video Playback Token Secret
# -----------------------------------
# Secret key for generating secure playback tokens
PLAYBACK_SECRET=your-playback-token-secret-change-in-production
